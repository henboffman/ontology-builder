@page
@model Eidos.Pages.Account.LoginModel
@{
    ViewData["Title"] = Model.IsRegisterMode ? "Register" : "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@(Model.IsRegisterMode ? "Create a free account for Eidos Ontology Builder. Sign up with email or use OAuth providers (GitHub, Google, Microsoft) for instant access." : "Sign in to Eidos Ontology Builder to manage your ontologies. Login with email or OAuth providers (GitHub, Google, Microsoft) for secure authentication.")" />
    <title>@ViewData["Title"] - Eidos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                        }
                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="alert alert-success">@Model.SuccessMessage</div>
                        }

                        <form method="post" asp-page="/Account/Login">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" name="Mode" value="@Model.Mode" />

                            @if (Model.IsRegisterMode)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Display Name</label>
                                    <input type="text" class="form-control" name="Input.DisplayName" value="@Model.Input.DisplayName" placeholder="John Doe" required />
                                </div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="Input.Email" value="@Model.Input.Email" placeholder="you@example.com" autocomplete="username" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" name="Input.Password" autocomplete="current-password" required />
                                @if (Model.IsRegisterMode)
                                {
                                    <small class="form-text text-muted">
                                        Must be at least 8 characters with uppercase, lowercase, number, and special character.
                                    </small>
                                }
                            </div>

                            @if (Model.IsRegisterMode)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Confirm Password</label>
                                    <input type="password" class="form-control" name="Input.ConfirmPassword" autocomplete="new-password" required />
                                </div>
                            }

                            <button type="submit" class="btn btn-primary w-100">
                                @(Model.IsRegisterMode ? "Register" : "Login")
                            </button>
                        </form>

                        @if (Model.IsGoogleConfigured || Model.IsMicrosoftConfigured || Model.IsGitHubConfigured)
                        {
                            <hr class="my-4" />

                            <div class="text-center mb-3">
                                <p class="text-muted mb-2">Or sign in with:</p>

                                @if (Model.IsGoogleConfigured)
                                {
                                    <!-- Google Login -->
                                    <a href="/Account/ExternalLogin?provider=Google" class="btn btn-outline-secondary w-100 mb-2" style="border-color: #ddd;">
                                        <svg width="16" height="16" viewBox="0 0 48 48" style="margin-right: 8px; vertical-align: middle;">
                                            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
                                            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
                                            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
                                            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
                                            <path fill="none" d="M0 0h48v48H0z"/>
                                        </svg>
                                        Continue with Google
                                    </a>
                                }

                                @if (Model.IsMicrosoftConfigured)
                                {
                                    <!-- Microsoft Login -->
                                    <a href="/Account/ExternalLogin?provider=Microsoft" class="btn btn-outline-secondary w-100 mb-2" style="border-color: #ddd;">
                                        <svg width="16" height="16" viewBox="0 0 23 23" style="margin-right: 8px; vertical-align: middle;">
                                            <path fill="#f25022" d="M0 0h11v11H0z"/>
                                            <path fill="#00a4ef" d="M12 0h11v11H12z"/>
                                            <path fill="#7fba00" d="M0 12h11v11H0z"/>
                                            <path fill="#ffb900" d="M12 12h11v11H12z"/>
                                        </svg>
                                        Continue with Microsoft
                                    </a>
                                }

                                @if (Model.IsGitHubConfigured)
                                {
                                    <!-- GitHub Login -->
                                    <a href="/Account/ExternalLogin?provider=GitHub" class="btn btn-dark w-100">
                                        <svg height="16" width="16" viewBox="0 0 16 16" style="fill: white; margin-right: 8px; vertical-align: middle;">
                                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
                                        </svg>
                                        Continue with GitHub
                                    </a>
                                }
                            </div>
                        }

                        <hr class="my-4" />

                        <div class="text-center">
                            <a href="@Model.ToggleUrl" class="btn btn-link">
                                @(Model.IsRegisterMode ? "Already have an account? Login" : "Don't have an account? Register")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
