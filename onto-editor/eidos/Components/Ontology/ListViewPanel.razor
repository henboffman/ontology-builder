    private async Task ViewConceptNote(Concept concept)
    {
        if (concept == null)
        {
            ToastService.ShowWarning("Unable to navigate to note");
            return;
        }

        try
        {
            // Find the concept note for this concept
            var note = await NoteRepository.GetConceptNoteAsync(concept.Id);

            if (note != null)
            {
                // Navigate to workspace with the note pre-selected
                Navigation.NavigateTo($"workspace/{note.WorkspaceId}?noteId={note.Id}");
            }
            else
            {
                // Note doesn't exist yet - just show a message
                ToastService.ShowInfo($"Note for '{concept.Name}' will be created automatically when needed");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error navigating to concept note: {ex.Message}");
            ToastService.ShowError($"Error navigating to note: {ex.Message}");
        }
    }

    // Quick Preview functionality
    private QuickPreviewTooltip? quickPreviewTooltip;
    private Concept? previewConcept;
    private int previewPropertyCount;
    private int previewRelationshipCount;
    private bool previewShowActions = true;
    private System.Threading.Timer? hidePreviewTimer;

    private async void ShowConceptPreview(Concept concept, MouseEventArgs e)
    {
        // Cancel any pending hide
        CancelHidePreview();

        // Set preview data
        previewConcept = concept;
        previewPropertyCount = concept.Properties?.Count ?? 0;

        // Count relationships for this concept
        var outgoingCount = Relationships.Count(r => r.SourceConceptId == concept.Id);
        var incomingCount = Relationships.Count(r => r.TargetConceptId == concept.Id);
        previewRelationshipCount = outgoingCount + incomingCount;

        // Show tooltip at mouse position
        if (quickPreviewTooltip != null)
        {
            await quickPreviewTooltip.ShowAt(e.ClientX, e.ClientY);
        }
    }

    private void StartHidePreviewTimer()
    {
        // Hide preview after a short delay (allows user to move mouse into tooltip)
        hidePreviewTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
    {
            quickPreviewTooltip?.Hide();
            StateHasChanged();
        });
        }, null, 300, Timeout.Infinite);
    }

    private void CancelHidePreview()
    {
        // Cancel the hide timer
        hidePreviewTimer?.Dispose();
        hidePreviewTimer = null;
    }

    private async Task HandlePreviewAction(Func<Task> action)
    {
        await action();
    }

    public void Dispose()
    {
        hidePreviewTimer?.Dispose();
    }
