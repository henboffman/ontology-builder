@using Eidos.Models
@using Eidos.Models.Enums
@using Enums = Eidos.Models.Enums
@using Eidos.Components.Shared
@using Eidos.Services
@using Microsoft.JSInterop
@implements IDisposable

<!-- Quick Preview Tooltip -->
<QuickPreviewTooltip @ref="quickPreviewTooltip" Concept="@previewConcept" PropertyCount="@previewPropertyCount"
    RelationshipCount="@previewRelationshipCount" ShowActions="@previewShowActions" CanEdit="@CanEdit()"
    OnEdit="@(() => HandlePreviewAction(() => OnConceptEdit.InvokeAsync(previewConcept)))"
    OnDuplicate="@(() => HandlePreviewAction(() => OnConceptDuplicate.InvokeAsync(previewConcept)))"
    OnDelete="@(() => HandlePreviewAction(() => OnConceptDelete.InvokeAsync(previewConcept?.Id ?? 0)))"
    OnMouseEnter="@CancelHidePreview" OnMouseLeave="@StartHidePreviewTimer" />

<!-- List View Tabs -->
<div class="list-view-tabs-container">
    <!-- Tab Navigation -->
    <div class="list-view-tabs-nav">
        <button class="list-view-tab @(activeListTab == "concepts" ? "active" : "")"
            @onclick='() => activeListTab = "concepts"'>
            <i class="bi bi-lightbulb"></i>
            <span>Concepts</span>
        </button>
        <button class="list-view-tab @(activeListTab == "relationships" ? "active" : "")"
            @onclick='() => activeListTab = "relationships"'>
            <i class="bi bi-diagram-3"></i>
            <span>Relationships</span>
        </button>
    </div>

    <!-- Tab Content -->
    <div class="list-view-tab-content">
        <!-- Concepts Tab -->
        <div class="list-view-tab-pane @(activeListTab == "concepts" ? "active" : "")">
            <!-- Concepts Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap gap-2">
                        <div>
                            <h5 class="mb-0">Concepts</h5>
                            @if (!string.IsNullOrWhiteSpace(searchQuery) && AllConcepts.Any())
                            {
                                <small class="text-muted">Showing @FilteredConcepts.Count() of @AllConcepts.Count()
                                    concepts</small>
                            }
                        </div>
                        <div class="d-flex gap-2 align-items-center">
                            @if (LinkedOntologies?.Any() == true)
                            {
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="showVirtualConceptsToggle"
                                        checked="@showVirtualConcepts"
                                        @onchange="@((ChangeEventArgs e) => showVirtualConcepts = (bool)e.Value!)">
                                    <label class="form-check-label small" for="showVirtualConceptsToggle">
                                        <i class="bi bi-hexagon"></i> Show Virtual
                                    </label>
                                </div>
                            }
                            <button class="btn btn-sm btn-primary" @onclick="OnAddConceptClick">
                                <i class="bi bi-plus-circle"></i> Add Concept
                            </button>
                        </div>
                    </div>
                    <div class="d-flex gap-2 align-items-stretch flex-wrap">
                        <div class="input-group input-group-sm flex-grow-1" style="min-width: 200px;">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control form-control-sm"
                                placeholder="Search concepts... (Ctrl+F)" @bind="searchQuery" @bind:event="oninput"
                                @ref="searchInputRef" />
                            @if (!string.IsNullOrWhiteSpace(searchQuery))
                            {
                                <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                                    <i class="bi bi-x"></i>
                                </button>
                            }
                        </div>
                        <div class="input-group input-group-sm flex-shrink-0" style="min-width: 200px;">
                            <span class="input-group-text"><i class="bi bi-sort-down"></i></span>
                            <select class="form-select form-select-sm" @bind="sortOption">
                                <option value="name">Sort by Name</option>
                                <option value="category">Sort by Category</option>
                                <option value="created">Sort by Created</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Concepts.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-lightbulb"></i> No concepts yet. Click "Add Concept" to start building your
                            ontology!
                        </div>
                    }
                    else if (!FilteredConcepts.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-search"></i> No concepts match your search query "@SearchQuery"
                        </div>
                    }
                    else
                    {
                        <div class="list-group" style="max-height: 600px; overflow-y: auto;">
                            @foreach (var item in SortedConcepts)
                            {
                                var concept = item.Concept;
                                var conceptIssue = item.IsVirtual ? null : GetConceptIssue(concept.Id);
                                var borderClass = conceptIssue != null ? GetValidationBorderClass(conceptIssue.Severity) : "";
                                var virtualClass = item.IsVirtual ? "virtual-concept-item" : "";
                                <div class="list-group-item list-group-item-action concept-list-item @borderClass @virtualClass"
                                    id="@(item.IsVirtual ? $"virtualconcept-{item.LinkId}-{concept.Id}" : $"concept-{concept.Id}")"
                                    @onclick="() => HandleConceptClick(item)"
                                    style="cursor: pointer; border-left: 4px solid @(concept.Color ?? "var(--concept-secondary)")">
                                    <div class="concept-item-layout">
                                        <div class="concept-content">
                                            <div class="concept-header">
                                                @if (item.IsVirtual)
                                                {
                                                    <i class="bi bi-hexagon text-primary me-1"
                                                        title="Virtual concept from @item.SourceOntologyName"></i>
                                                    @if (item.NestingLevel > 0)
                                                    {
                                                        <span class="badge bg-info badge-sm me-1"
                                                            title="Nested @item.NestingLevel level(s) deep">
                                                            L@(item.NestingLevel + 1)
                                                        </span>
                                                    }
                                                }
                                                @if (conceptIssue != null)
                                                {
                                                    <i class="@GetValidationIconClass(conceptIssue.Severity) me-1"
                                                        title="@conceptIssue.Message"></i>
                                                }
                                                <h6 class="concept-name mb-0">
                                                    <InlineEditableText Value="@concept.Name"
                                                        OnSave="@(async (newName) => await UpdateConceptNameInline(concept.Id, newName))"
                                                        Placeholder="Concept name..." CanEdit="@(!item.IsVirtual && CanEdit())"
                                                        MaxLength="200" />
                                                </h6>
                                                @if (item.IsVirtual)
                                                {
                                                    <span class="badge bg-primary badge-sm">@item.SourceOntologyName</span>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(concept.Category))
                                                {
                                                    <span class="badge bg-secondary">@concept.Category</span>
                                                }
                                            </div>
                                            @if (!string.IsNullOrWhiteSpace(concept.SimpleExplanation))
                                            {
                                                <p class="concept-description mb-1 text-muted small">@concept.SimpleExplanation</p>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(concept.Examples))
                                            {
                                                <p class="concept-examples mb-0 small">
                                                    <i class="bi bi-lightbulb text-warning"></i>
                                                    <em>Examples: @concept.Examples</em>
                                                </p>
                                            }
                                            <!-- Show relationships -->
                                            @{
                                                var outgoing = GetConceptRelationships(concept.Id, isOutgoing: true);
                                                var incoming = GetConceptRelationships(concept.Id, isOutgoing: false);
                                            }
                                            @if (outgoing.Any() || incoming.Any())
                                            {
                                                <div class="concept-relationships mt-2 small">
                                                    @foreach (var rel in outgoing)
                                                    {
                                                        <span class="badge bg-info me-1 mb-1 has-preview" style="cursor: help;"
                                                            @onmouseenter="@((args) => ShowConceptPreview(rel.TargetConcept, args))"
                                                            @onmouseleave="@StartHidePreviewTimer">
                                                            @rel.RelationType → @rel.TargetConcept.Name
                                                        </span>
                                                    }
                                                    @foreach (var rel in incoming)
                                                    {
                                                        <span class="badge bg-success me-1 mb-1 has-preview" style="cursor: help;"
                                                            @onmouseenter="@((args) => ShowConceptPreview(rel.SourceConcept, args))"
                                                            @onmouseleave="@StartHidePreviewTimer">
                                                            @rel.SourceConcept.Name → @rel.RelationType
                                                        </span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                        @if (!item.IsVirtual)
                                        {
                                            <div class="concept-actions">
                                                <!-- Desktop: Horizontal button group -->
                                                <div class="btn-group d-none d-lg-flex">
                                                    <button class="btn btn-sm btn-outline-info" @onclick:stopPropagation="true"
                                                        @onclick="() => ViewConceptNote(concept)" title="View Note">
                                                        <i class="bi bi-journal-text"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-primary" @onclick:stopPropagation="true"
                                                        @onclick="() => OnConceptEdit.InvokeAsync(concept)" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-secondary" @onclick:stopPropagation="true"
                                                        @onclick="() => OnConceptDuplicate.InvokeAsync(concept)" title="Duplicate">
                                                        <i class="bi bi-files"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick:stopPropagation="true"
                                                        @onclick="() => OnConceptDelete.InvokeAsync(concept.Id)" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>

                                                <!-- Mobile/Tablet: Dropdown menu -->
                                                <div class="dropdown d-lg-none">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                                        @onclick:stopPropagation="true" data-bs-toggle="dropdown"
                                                        aria-expanded="false" title="Actions">
                                                        <i class="bi bi-three-dots-vertical"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end" @onclick:stopPropagation="true">
                                                        <li>
                                                            <button class="dropdown-item" @onclick="() => ViewConceptNote(concept)">
                                                                <i class="bi bi-journal-text me-2"></i> View Note
                                                            </button>
                                                        </li>
                                                        <li>
                                                            <hr class="dropdown-divider">
                                                        </li>
                                                        <li>
                                                            <button class="dropdown-item"
                                                                @onclick="() => OnConceptEdit.InvokeAsync(concept)">
                                                                <i class="bi bi-pencil me-2"></i> Edit
                                                            </button>
                                                        </li>
                                                        <li>
                                                            <button class="dropdown-item"
                                                                @onclick="() => OnConceptDuplicate.InvokeAsync(concept)">
                                                                <i class="bi bi-files me-2"></i> Duplicate
                                                            </button>
                                                        </li>
                                                        <li>
                                                            <hr class="dropdown-divider">
                                                        </li>
                                                        <li>
                                                            <button class="dropdown-item text-danger"
                                                                @onclick="() => OnConceptDelete.InvokeAsync(concept.Id)">
                                                                <i class="bi bi-trash me-2"></i> Delete
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="concept-actions">
                                                <!-- Virtual concept: Import action only -->
                                                <button class="btn btn-sm btn-outline-success" @onclick:stopPropagation="true"
                                                    @onclick="() => OnVirtualConceptImport.InvokeAsync((item.LinkId, concept))"
                                                    title="Import this concept to your ontology">
                                                    <i class="bi bi-download"></i> Import
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Relationships Tab -->
        <div class="list-view-tab-pane @(activeListTab == "relationships" ? "active" : "")">
            <!-- Relationships Card -->
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap gap-2">
                        <div>
                            <h5 class="mb-0">Relationships</h5>
                            @if (!string.IsNullOrWhiteSpace(relationshipSearchQuery) && AllRelationships.Any())
                            {
                                <small class="text-muted">Showing @FilteredRelationships.Count() of
                                    @AllRelationships.Count() relationships</small>
                            }
                        </div>
                        <div class="d-flex gap-2 align-items-center">
                            @if (LinkedOntologies?.Any() == true)
                            {
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="showVirtualRelationshipsToggle"
                                        checked="@showVirtualRelationships"
                                        @onchange="@((ChangeEventArgs e) => showVirtualRelationships = (bool)e.Value!)">
                                    <label class="form-check-label small" for="showVirtualRelationshipsToggle">
                                        <i class="bi bi-hexagon"></i> Show Virtual
                                    </label>
                                </div>
                            }
                            <button class="btn btn-sm btn-primary" @onclick="OnAddRelationshipClick">
                                <i class="bi bi-plus-circle"></i> Add Relationship
                            </button>
                        </div>
                    </div>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control form-control-sm" placeholder="Search relationships..."
                            @bind="relationshipSearchQuery" @bind:event="oninput" />
                        @if (!string.IsNullOrWhiteSpace(relationshipSearchQuery))
                        {
                            <button class="btn btn-outline-secondary" type="button"
                                @onclick="() => relationshipSearchQuery = string.Empty">
                                <i class="bi bi-x"></i>
                            </button>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (Concepts.Count < 2)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i> You need at least 2 concepts before you can create
                            relationships.
                        </div>
                    }
                    else if (!FilteredRelationships.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-search"></i> No relationships match your search query "@relationshipSearchQuery"
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var item in SortedRelationships)
                            {
                                var rel = item.Relationship;
                                var relIssue = item.IsVirtual ? null : GetRelationshipIssue(rel.Id);
                                var relBorderClass = relIssue != null ? GetValidationBorderClass(relIssue.Severity) : "";
                                var virtualClass = item.IsVirtual ? "virtual-relationship-item" : "";
                                <div class="list-group-item @relBorderClass @virtualClass"
                                    id="@(item.IsVirtual ? $"virtualrel-{item.LinkId}-{rel.Id}" : $"relationship-{rel.Id}")">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                                @if (item.IsVirtual)
                                                {
                                                    <i class="bi bi-hexagon text-primary me-1"
                                                        title="Virtual relationship from @item.SourceOntologyName"></i>
                                                    @if (item.NestingLevel > 0)
                                                    {
                                                        <span class="badge bg-info badge-sm me-1"
                                                            title="Nested @item.NestingLevel level(s) deep">
                                                            L@(item.NestingLevel + 1)
                                                        </span>
                                                    }
                                                }
                                                @if (relIssue != null)
                                                {
                                                    <i class="@GetValidationIconClass(relIssue.Severity)"
                                                        title="@relIssue.Message"></i>
                                                }
                                                @if (rel.SourceConcept != null)
                                                {
                                                    <span class="badge has-preview"
                                                        style="background-color: @(rel.SourceConcept.Color ?? "#6c757d"); cursor: help;"
                                                        @onmouseenter="@((args) => ShowConceptPreview(rel.SourceConcept, args))"
                                                        @onmouseleave="@StartHidePreviewTimer">
                                                        @rel.SourceConcept.Name
                                                    </span>
                                                }
                                                <span class="badge bg-dark">@rel.RelationType</span>
                                                <i class="bi bi-arrow-right"></i>
                                                @if (rel.TargetConcept != null)
                                                {
                                                    <span class="badge has-preview"
                                                        style="background-color: @(rel.TargetConcept.Color ?? "#6c757d"); cursor: help;"
                                                        @onmouseenter="@((args) => ShowConceptPreview(rel.TargetConcept, args))"
                                                        @onmouseleave="@StartHidePreviewTimer">
                                                        @rel.TargetConcept.Name
                                                    </span>
                                                }
                                                @if (item.IsVirtual)
                                                {
                                                    <span class="badge bg-primary badge-sm">@item.SourceOntologyName</span>
                                                }
                                            </div>
                                            @if (!string.IsNullOrWhiteSpace(rel.Description))
                                            {
                                                <p class="mb-0 mt-1 small text-muted">@rel.Description</p>
                                            }
                                        </div>
                                        @if (!item.IsVirtual)
                                        {
                                            <div class="relationship-actions ms-2">
                                                <!-- Desktop: Horizontal button group -->
                                                <div class="btn-group d-none d-lg-flex">
                                                    <button class="btn btn-sm btn-outline-primary"
                                                        @onclick="() => OnRelationshipEdit.InvokeAsync(rel)" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-secondary"
                                                        @onclick="() => OnRelationshipDuplicate.InvokeAsync(rel)" title="Duplicate">
                                                        <i class="bi bi-files"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger"
                                                        @onclick="() => OnRelationshipDelete.InvokeAsync(rel.Id)" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>

                                                <!-- Mobile/Tablet: Dropdown menu -->
                                                <div class="dropdown d-lg-none">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                                        data-bs-toggle="dropdown" aria-expanded="false" title="Actions">
                                                        <i class="bi bi-three-dots-vertical"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <button class="dropdown-item"
                                                                @onclick="() => OnRelationshipEdit.InvokeAsync(rel)">
                                                                <i class="bi bi-pencil me-2"></i> Edit
                                                            </button>
                                                        </li>
                                                        <li>
                                                            <button class="dropdown-item"
                                                                @onclick="() => OnRelationshipDuplicate.InvokeAsync(rel)">
                                                                <i class="bi bi-files me-2"></i> Duplicate
                                                            </button>
                                                        </li>
                                                        <li>
                                                            <hr class="dropdown-divider">
                                                        </li>
                                                        <li>
                                                            <button class="dropdown-item text-danger"
                                                                @onclick="() => OnRelationshipDelete.InvokeAsync(rel.Id)">
                                                                <i class="bi bi-trash me-2"></i> Delete
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inject Data.Repositories.NoteRepository NoteRepository
@inject ToastService ToastService

@code
{
    [Parameter]
    public string ActiveListTab { get; set; } = "concepts";

    [Parameter]
    public EventCallback<string> ActiveListTabChanged { get; set; }

    private string activeListTab
    {
        get => ActiveListTab;
        set
        {
            if (ActiveListTab != value)
            {
                ActiveListTabChanged.InvokeAsync(value);
            }
        }
    }

    [Parameter, EditorRequired]
    public ICollection<Concept> Concepts { get; set; } = new List<Concept>();

    [Parameter, EditorRequired]
    public ICollection<Relationship> Relationships { get; set; } = new List<Relationship>();

    [Parameter]
    public ICollection<OntologyLink>? LinkedOntologies { get; set; }

    private bool showVirtualConcepts = false;
    private bool showVirtualRelationships = false;
    private string relationshipSearchQuery = string.Empty;

    [Parameter]
    public string SearchQuery { get; set; } = string.Empty;

    private ElementReference searchInputRef;
    private string searchQuery = string.Empty;

    [Parameter]
    public string SortOption { get; set; } = "name";

    [Parameter]
    public EventCallback<string> SortOptionChanged { get; set; }

    [Parameter]
    public EventCallback OnAddConceptClick { get; set; }

    [Parameter]
    public EventCallback OnAddRelationshipClick { get; set; }

    [Parameter]
    public EventCallback<Concept> OnConceptSelect { get; set; }

    [Parameter]
    public EventCallback<Concept> OnConceptEdit { get; set; }

    [Parameter]
    public EventCallback<Concept> OnConceptDuplicate { get; set; }

    [Parameter]
    public EventCallback<int> OnConceptDelete { get; set; }

    [Parameter]
    public EventCallback<Relationship> OnRelationshipEdit { get; set; }

    [Parameter]
    public EventCallback<Relationship> OnRelationshipDuplicate { get; set; }

    [Parameter]
    public EventCallback<int> OnRelationshipDelete { get; set; }

    [Parameter]
    public EventCallback<(int linkId, Concept concept)> OnVirtualConceptImport { get; set; }

    [Parameter]
    public ValidationResult? ValidationResult { get; set; }

    [Parameter]
    public int? OntologyId { get; set; }

    // Helper class to represent both base and virtual concepts in the list
    private class ConceptListItem
    {
        public Concept Concept { get; set; } = null!;
        public bool IsVirtual { get; set; }
        public int LinkId { get; set; } // Only for virtual concepts
        public string SourceOntologyName { get; set; } = string.Empty; // Only for virtual concepts
        public int NestingLevel { get; set; } = 0; // For nested virtual ontologies
    }

    // Helper class to represent both base and virtual relationships in the list
    private class RelationshipListItem
    {
        public Relationship Relationship { get; set; } = null!;
        public bool IsVirtual { get; set; }
        public int LinkId { get; set; } // Only for virtual relationships
        public string SourceOntologyName { get; set; } = string.Empty; // Only for virtual relationships
        public int NestingLevel { get; set; } = 0; // For nested virtual ontologies
    }

    // Caching for relationship lookups
    private Dictionary<int, List<Relationship>>? _outgoingRelationshipsCache;
    private Dictionary<int, List<Relationship>>? _incomingRelationshipsCache;
    private ICollection<Relationship>? _lastRelationshipsReference;
    private ICollection<Concept>? _lastConceptsReference;

    private string sortOption
    {
        get => SortOption;
        set
        {
            if (SortOption != value)
            {
                SortOption = value;
                SortOptionChanged.InvokeAsync(value);
            }
        }
    }

    protected override void OnInitialized()
    {
        searchQuery = SearchQuery;
    }

    protected override void OnParametersSet()
    {
        // Invalidate cache when Relationships or Concepts parameters change
        if (!ReferenceEquals(_lastRelationshipsReference, Relationships) ||
        !ReferenceEquals(_lastConceptsReference, Concepts))
        {
            ClearRelationshipCaches();
            _lastRelationshipsReference = Relationships;
            _lastConceptsReference = Concepts;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
document.addEventListener('keyboardShortcut', (e) => {
if (e.detail.action === 'focusSearch') {
const searchInput = document.querySelector('input[placeholder*=""Search concepts""]');
if (searchInput) {
searchInput.focus();
searchInput.select();
}
}
});
");
        }
    }

    private void ClearSearch()
    {
        searchQuery = string.Empty;
    }

    private void ClearRelationshipCaches()
    {
        _outgoingRelationshipsCache = null;
        _incomingRelationshipsCache = null;
    }

    private List<Relationship> GetConceptRelationships(int conceptId, bool isOutgoing)
    {
        // Build caches if not already built
        if (_outgoingRelationshipsCache == null || _incomingRelationshipsCache == null)
        {
            _outgoingRelationshipsCache = Relationships
            .GroupBy(r => r.SourceConceptId)
            .ToDictionary(g => g.Key, g => g.ToList());
            _incomingRelationshipsCache = Relationships
            .GroupBy(r => r.TargetConceptId)
            .ToDictionary(g => g.Key, g => g.ToList());
        }

        if (isOutgoing)
        {
            return _outgoingRelationshipsCache.TryGetValue(conceptId, out var rels) ? rels : new List<Relationship>();
        }
        else
        {
            return _incomingRelationshipsCache.TryGetValue(conceptId, out var rels) ? rels : new List<Relationship>();
        }
    }

    // Get all concepts (base + virtual if enabled)
    private IEnumerable<ConceptListItem> AllConcepts
    {
        get
        {
            var items = new List<ConceptListItem>();

            // Add base ontology concepts
            foreach (var concept in Concepts)
            {
                items.Add(new ConceptListItem
                {
                    Concept = concept,
                    IsVirtual = false
                });
            }

            // Add virtual concepts if enabled
            if (showVirtualConcepts && LinkedOntologies?.Any() == true)
            {
