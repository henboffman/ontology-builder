    // Recursive helper to add virtual concepts (handles nesting)
    private void AddVirtualConcepts(List<ConceptListItem> items, OntologyLink link, string sourceName, int nestingLevel)
    {
        if (link.LinkedOntology?.Concepts != null)
        {
            foreach (var concept in link.LinkedOntology.Concepts)
            {
                items.Add(new ConceptListItem
                {
                    Concept = concept,
                    IsVirtual = true,
                    LinkId = link.Id,
                    SourceOntologyName = sourceName,
                    NestingLevel = nestingLevel
                });
            }

            // Recursively add nested linked ontologies
            if (link.LinkedOntology.LinkedOntologies?.Any() == true)
            {
                foreach (var nestedLink in link.LinkedOntology.LinkedOntologies.Where(l => l.LinkType == Enums.LinkType.Internal))
                {
                    AddVirtualConcepts(items, nestedLink, $"{sourceName} → {nestedLink.Name}", nestingLevel + 1);
                }
            }
        }
    }

    private IEnumerable<ConceptListItem> FilteredConcepts
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchQuery))
                return AllConcepts;

            var query = searchQuery.ToLower();
            return AllConcepts.Where(item =>
            {
                var c = item.Concept;
                return c.Name.ToLower().Contains(query) ||
    (c.Definition?.ToLower().Contains(query) ?? false) ||
    (c.SimpleExplanation?.ToLower().Contains(query) ?? false) ||
    (c.Examples?.ToLower().Contains(query) ?? false) ||
    (c.Category?.ToLower().Contains(query) ?? false) ||
    (item.IsVirtual && item.SourceOntologyName.ToLower().Contains(query));
            });
        }
    }

    private IEnumerable<ConceptListItem> SortedConcepts
    {
        get
