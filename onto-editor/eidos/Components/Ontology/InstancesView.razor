@using Eidos.Models
@using Eidos.Components.Shared

<div class="card h-100">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-person me-2"></i>Individuals
        </h5>
        <small class="text-muted">
            Specific instances of concepts
        </small>
    </div>
    <div class="card-body" style="overflow-y: auto;">
        <IndividualListView Individuals="@Individuals"
                          SelectedIndividual="@SelectedIndividual"
                          OnIndividualSelected="@OnIndividualSelected"
                          OnAddIndividualClick="@OnAddIndividualClick"
                          OnEditIndividualClick="@OnEditIndividualClick"
                          OnDeleteIndividualClick="@OnDeleteIndividualClick"
                          CanEdit="@CanEdit" />
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public required IEnumerable<Individual> Individuals { get; set; }

    [Parameter]
    public Individual? SelectedIndividual { get; set; }

    [Parameter, EditorRequired]
    public required bool CanEdit { get; set; }

    [Parameter]
    public EventCallback<Individual> OnIndividualSelected { get; set; }

    [Parameter]
    public EventCallback OnAddIndividualClick { get; set; }

    [Parameter]
    public EventCallback<Individual> OnEditIndividualClick { get; set; }

    [Parameter]
    public EventCallback<Individual> OnDeleteIndividualClick { get; set; }
}
