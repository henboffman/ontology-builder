@page "/workspaces"
@using Eidos.Models
@using Eidos.Services
@using Eidos.Components.Workspace
@using Microsoft.AspNetCore.Components.Authorization
@inject WorkspaceService WorkspaceService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject ToastService ToastService
@rendermode InteractiveServer

<PageTitle>My Workspaces - Eidos</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Workspaces</h2>
        <button class="btn btn-primary" @onclick="ShowCreateDialog">
            <i class="bi bi-plus-lg"></i> New Workspace
        </button>
    </div>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (workspaces.Any())
    {
        <div class="row g-4">
            @foreach (var workspace in workspaces)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 workspace-card" @onclick="@(() => OpenWorkspace(workspace.Id))">
                        <div class="card-body">
                            <h5 class="card-title">@workspace.Name</h5>
                            @if (!string.IsNullOrWhiteSpace(workspace.Description))
                            {
                                <p class="card-text text-muted">@workspace.Description</p>
                            }
                            <div class="workspace-stats mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-journal-text"></i> @workspace.NoteCount notes
                                </small>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    Updated @workspace.UpdatedAt.ToString("MMM d, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <i class="bi bi-folder2-open" style="font-size: 4rem; opacity: 0.3;"></i>
            <h4 class="mt-4">No Workspaces Yet</h4>
            <p class="text-muted">Create your first workspace to start taking notes</p>
            <button class="btn btn-primary mt-3" @onclick="ShowCreateDialog">
                <i class="bi bi-plus-lg"></i> Create Workspace
            </button>
        </div>
    }
</div>

<CreateWorkspaceDialog
    IsVisible="@showCreateDialog"
    IsVisibleChanged="@((value) => showCreateDialog = value)"
    OnWorkspaceCreated="@HandleWorkspaceCreated"
    CurrentUserId="@currentUserId" />

@code {
    private List<Workspace> workspaces = new();
    private bool loading = true;
    private bool showCreateDialog = false;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(currentUserId))
        {
            Navigation.NavigateTo("/Account/Login");
            return;
        }

        await LoadWorkspacesAsync();
    }

    private async Task LoadWorkspacesAsync()
    {
        try
        {
            loading = true;
            workspaces = await WorkspaceService.GetUserWorkspacesAsync(currentUserId!);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading workspaces: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowCreateDialog()
    {
        showCreateDialog = true;
    }

    private async Task HandleWorkspaceCreated(Workspace workspace)
    {
        // Add to list
        workspaces.Insert(0, workspace);

        // Navigate to the new workspace
        Navigation.NavigateTo($"/workspace/{workspace.Id}");
    }

    private void OpenWorkspace(int workspaceId)
    {
        Navigation.NavigateTo($"/workspace/{workspaceId}");
    }
}
