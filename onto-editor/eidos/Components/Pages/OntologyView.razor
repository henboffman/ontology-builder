    {
        Navigation.NavigateTo("");
    }

    private async Task HandleUndo()
    {
        var success = await OntologyService.UndoAsync();
        if (success)
        {
            await LoadOntology();
            StateHasChanged();
        }
    }

    private async Task HandleRedo()
    {
        var success = await OntologyService.RedoAsync();
        if (success)
        {
            await LoadOntology();
            StateHasChanged();
        }
    }

    private List<string> GetSourceOntologies()
    {
        if (ontology == null) return new List<string>();

        return ontology.Concepts
            .Select(c => c.SourceOntology ?? "Original")
            .Distinct()
            .ToList();
    }

    private List<SelectedNodeDetailsPanel.ConceptConnection> GetConnectedConcepts()
    {
        if (selectedConcept == null || ontology == null)
            return new List<SelectedNodeDetailsPanel.ConceptConnection>();

        var connections = new List<SelectedNodeDetailsPanel.ConceptConnection>();

        // Outgoing relationships (from this concept)
        var outgoing = ontology.Relationships
            .Where(r => r.SourceConceptId == selectedConcept.Id)
            .Select(r => new SelectedNodeDetailsPanel.ConceptConnection
            {
                ConceptName = r.TargetConcept?.Name ?? "Unknown",
                ConceptColor = r.TargetConcept?.Color ?? "#4A90E2",
                RelationType = r.RelationType,
                IsOutgoing = true
            });

        // Incoming relationships (to this concept)
        var incoming = ontology.Relationships
            .Where(r => r.TargetConceptId == selectedConcept.Id)
            .Select(r => new SelectedNodeDetailsPanel.ConceptConnection
            {
                ConceptName = r.SourceConcept?.Name ?? "Unknown",
                ConceptColor = r.SourceConcept?.Color ?? "#4A90E2",
                RelationType = r.RelationType,
                IsOutgoing = false
            });

        connections.AddRange(outgoing);
        connections.AddRange(incoming);

        return connections;
    }

