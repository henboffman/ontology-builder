@inherits LayoutComponentBase
@using Eidos.Components.Shared

<ThemeInitializer @rendermode="InteractiveServer" />

<!-- TopBar Layout -->
<div class="page-topbar">
    <TopBar @rendermode="InteractiveServer" />

    <main class="main-topbar">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<ToastNotification @rendermode="InteractiveServer" />
<ConfirmDialog @rendermode="InteractiveServer" />
<KeyboardShortcutsDialog />
