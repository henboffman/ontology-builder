@using Eidos.Models
@using Eidos.Models.Enums
@using Eidos.Services
@using Eidos.Components.Shared
@inject OntologyPermissionService PermissionService
@inject UserGroupService UserGroupService
@inject ToastService ToastService
@inject ILogger<PermissionsSettingsTab> Logger

<div class="settings-section">
    <div class="settings-section-header">
        <h4>Access & Permissions</h4>
        <p class="text-muted">Control who can view and edit this ontology.</p>
    </div>

    <div class="settings-group">
        <!-- Visibility Settings -->
        <div class="settings-item">
            <label class="form-label fw-bold">Visibility</label>
            <p class="text-muted small mb-3">Who can see this ontology?</p>

            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="visibility" id="visibilityPrivate"
                       checked="@(visibility == OntologyVisibility.Private)"
                       @onchange="@(() => visibility = OntologyVisibility.Private)" />
                <label class="form-check-label" for="visibilityPrivate">
                    <strong><i class="bi bi-lock me-2"></i>Private</strong>
                    <p class="text-muted small mb-0">Only you and people you explicitly grant access to can view this ontology.</p>
                </label>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="visibility" id="visibilityGroup"
                       checked="@(visibility == OntologyVisibility.Group)"
                       @onchange="@(() => visibility = OntologyVisibility.Group)" />
                <label class="form-check-label" for="visibilityGroup">
                    <strong><i class="bi bi-people me-2"></i>Group</strong>
                    <p class="text-muted small mb-0">Visible to specific groups you manage below.</p>
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="visibility" id="visibilityPublic"
                       checked="@(visibility == OntologyVisibility.Public)"
                       @onchange="@(() => visibility = OntologyVisibility.Public)" />
                <label class="form-check-label" for="visibilityPublic">
                    <strong><i class="bi bi-globe me-2"></i>Public</strong>
                    <p class="text-muted small mb-0">Anyone can view this ontology.</p>
                </label>
            </div>
        </div>

        <!-- Public Edit Settings (only show if Public) -->
        @if (visibility == OntologyVisibility.Public)
        {
            <div class="settings-item">
                <label class="form-label fw-bold">Public Editing</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="allowPublicEdit" @bind="allowPublicEdit" />
                    <label class="form-check-label" for="allowPublicEdit">
                        Allow anyone to edit this ontology
                    </label>
                </div>
                <p class="text-muted small mt-2">
                    <i class="bi bi-exclamation-triangle text-warning me-1"></i>
                    Warning: Enabling this allows anonymous users to modify your ontology. Use with caution.
                </p>
            </div>
        }

        <!-- Approval Mode Settings -->
        <div class="settings-item">
            <label class="form-label fw-bold">Change Approval Workflow</label>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="requiresApproval" @bind="requiresApproval" />
                <label class="form-check-label" for="requiresApproval">
                    Require approval for all changes
                </label>
            </div>
            <p class="text-muted small mt-2">
                <i class="bi bi-info-circle me-1"></i>
                When enabled, users with Edit permission must create Merge Requests for review. Only users with Full Access can approve and merge changes. This is recommended for mature, production ontologies.
            </p>
        </div>

        <!-- Group Access Management -->
        @if (visibility == OntologyVisibility.Group)
        {
            <div class="settings-item">
                <label class="form-label fw-bold">Group Access</label>
                <p class="text-muted small mb-3">Manage which groups can access this ontology.</p>

                @if (groupAccess == null)
                {
                    <div class="d-flex justify-content-center p-4">
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (!groupAccess.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No groups have been granted access yet. Add groups below.
                    </div>
                }
                else
                {
                    <div class="list-group mb-3">
                        @foreach (var access in groupAccess)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@access.GroupName</strong>
                                    @if (access.IsOwnedByCurrentUser)
                                    {
                                        <span class="badge bg-info ms-1" style="font-size: 0.65rem;">You own this group</span>
                                    }
                                    <p class="text-muted small mb-0">@access.MemberCount members</p>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    @if (access.IsOwnedByCurrentUser)
                                    {
                                        <button class="btn btn-sm btn-outline-secondary"
                                                @onclick="@(() => ShowManageMembersDialog(access.GroupId, access.GroupName))"
                                                title="Add users to this group">
                                            <i class="bi bi-people me-1"></i>Manage Members
                                        </button>
                                    }
                                    <select class="form-select form-select-sm" style="width: auto;"
                                            @bind="access.PermissionLevel">
                                        <option value="@PermissionLevel.View">View Only</option>
                                        <option value="@PermissionLevel.ViewAndAdd">View & Add</option>
                                        <option value="@PermissionLevel.ViewAddEdit">View, Add & Edit</option>
                                        <option value="@PermissionLevel.FullAccess">Full Access</option>
                                    </select>
                                    <button class="btn btn-sm btn-outline-danger"
                                            @onclick="@(() => RemoveGroupAccess(access.GroupId))">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }

                <button class="btn btn-sm btn-outline-primary" @onclick="ShowAddGroupDialog">
                    <i class="bi bi-plus-circle me-2"></i>Add Group
                </button>
            </div>
        }
    </div>

    <div class="settings-footer">
        <button class="btn btn-primary" @onclick="HandleSave">
            <i class="bi bi-check-circle me-2"></i>Save Changes
        </button>
        <button class="btn btn-outline-secondary" @onclick="HandleCancel">
            Cancel
        </button>
    </div>
</div>

@* Manage Members Modal *@
@if (showManageMembersDialog)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-people me-2"></i>Manage Members - @selectedGroupName
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseManageMembersDialog" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Current Members -->
                    @if (currentMembers == null)
                    {
                        <div class="d-flex justify-content-center p-4">
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold">Current Members (@currentMembers.Count)</h6>
                            @if (!currentMembers.Any())
                            {
                                <div class="alert alert-info py-2">
                                    <small>No members yet. Add users below to get started.</small>
                                </div>
                            }
                            else
                            {
                                <div class="list-group">
                                    @foreach (var member in currentMembers)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2"
                                                     style="width: 32px; height: 32px; font-size: 14px;">
                                                    @GetInitials(member.User?.DisplayName ?? "?")
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@(member.User?.DisplayName ?? "Unknown User")</div>
                                                    <small class="text-muted">@(member.User?.Email)</small>
                                                </div>
                                            </div>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="@(() => RemoveGroupMember(member.UserId))"
                                                    title="Remove from group">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Add New Members -->
                        <div>
                            <h6 class="fw-bold">Add New Members</h6>
                            <UserPicker SelectedUserIds="selectedUsersToAdd" SelectedUserIdsChanged="@((ids) => selectedUsersToAdd = ids)" />
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="AddSelectedMembers" disabled="@(!selectedUsersToAdd.Any())">
                        <i class="bi bi-plus-circle me-2"></i>Add @selectedUsersToAdd.Count User@(selectedUsersToAdd.Count != 1 ? "s" : "")
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="CloseManageMembersDialog">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public int OntologyId { get; set; }

    [Parameter]
    public string? CurrentUserId { get; set; }

    [Parameter]
    public string? Visibility { get; set; }

    [Parameter]
    public bool AllowPublicEdit { get; set; }

    [Parameter]
    public bool RequiresApproval { get; set; }

    [Parameter]
    public EventCallback<(string visibility, bool allowPublicEdit, bool requiresApproval)> OnSave { get; set; }

    private string visibility = OntologyVisibility.Private;
    private bool allowPublicEdit;
    private bool requiresApproval;
    private List<GroupAccessInfo>? groupAccess;

    // Manage Members Dialog
    private bool showManageMembersDialog = false;
    private int selectedGroupId;
    private string selectedGroupName = string.Empty;
    private List<UserGroupMember>? currentMembers;
    private List<string> selectedUsersToAdd = new();

    protected override async Task OnParametersSetAsync()
    {
        visibility = Visibility ?? OntologyVisibility.Private;
        allowPublicEdit = AllowPublicEdit;
        requiresApproval = RequiresApproval;

        if (visibility == OntologyVisibility.Group)
        {
            await LoadGroupAccess();
        }
    }

    /// <summary>
    /// Loads group access permissions for the ontology.
    /// Maps database permission levels (view, edit, admin) to PermissionLevel enum values.
    /// </summary>
    private async Task LoadGroupAccess()
    {
        try
        {
            if (OntologyId > 0)
            {
                Logger.LogInformation("Loading group access for ontology {OntologyId}", OntologyId);

                var permissions = await PermissionService.GetGroupPermissionsAsync(OntologyId);

                // Map database permission strings to PermissionLevel enum
                // Database stores: "view", "edit", "admin"
                // Enum values: View, ViewAddEdit, FullAccess
                groupAccess = permissions.Select(p => new GroupAccessInfo
                {
                    GroupId = p.UserGroupId.ToString(),
                    GroupName = p.UserGroup?.Name ?? "Unknown Group",
                    PermissionLevel = p.PermissionLevel.ToLowerInvariant() switch
                    {
                        "view" => PermissionLevel.View,
                        "edit" => PermissionLevel.ViewAddEdit,
                        "admin" => PermissionLevel.FullAccess,
                        _ => PermissionLevel.View
                    },
                    MemberCount = p.UserGroup?.Members?.Count ?? 0,
                    CreatedByUserId = p.UserGroup?.CreatedByUserId,
                    IsOwnedByCurrentUser = p.UserGroup?.CreatedByUserId == CurrentUserId
                }).ToList();

                Logger.LogInformation("Loaded {Count} group permissions for ontology {OntologyId}",
                    groupAccess.Count, OntologyId);
            }
            else
            {
                groupAccess = new List<GroupAccessInfo>();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading group access for ontology {OntologyId}", OntologyId);
            ToastService.ShowError("Failed to load group access");
            groupAccess = new List<GroupAccessInfo>();
        }
    }

    private async Task HandleSave()
    {
        await OnSave.InvokeAsync((visibility, allowPublicEdit, requiresApproval));
    }

    private void HandleCancel()
    {
        visibility = Visibility ?? OntologyVisibility.Private;
        allowPublicEdit = AllowPublicEdit;
        requiresApproval = RequiresApproval;
    }

    private void ShowAddGroupDialog()
    {
        ToastService.ShowInfo("Group management coming soon");
    }

    private Task RemoveGroupAccess(string groupId)
    {
        if (groupAccess != null)
        {
            groupAccess.RemoveAll(g => g.GroupId == groupId);
            StateHasChanged();
        }

        return Task.CompletedTask;
    }

    private async Task ShowManageMembersDialog(string groupId, string groupName)
    {
        selectedGroupId = int.Parse(groupId);
        selectedGroupName = groupName;
        selectedUsersToAdd.Clear();
        currentMembers = null;
        showManageMembersDialog = true;
        StateHasChanged();

        // Load current members
        try
        {
            currentMembers = await UserGroupService.GetGroupMembersAsync(selectedGroupId);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading group members for group {GroupId}", selectedGroupId);
            ToastService.ShowError("Failed to load group members");
            currentMembers = new List<UserGroupMember>();
        }
    }

    private void CloseManageMembersDialog()
    {
        showManageMembersDialog = false;
        selectedUsersToAdd.Clear();
        currentMembers = null;
        StateHasChanged();
    }

    private async Task AddSelectedMembers()
    {
        if (!selectedUsersToAdd.Any() || string.IsNullOrEmpty(CurrentUserId))
        {
            return;
        }

        try
        {
            foreach (var userId in selectedUsersToAdd)
            {
                await UserGroupService.AddUserToGroupAsync(selectedGroupId, userId, CurrentUserId);
            }

            ToastService.ShowSuccess($"Added {selectedUsersToAdd.Count} user{(selectedUsersToAdd.Count != 1 ? "s" : "")} to {selectedGroupName}");

            // Reload members
            currentMembers = await UserGroupService.GetGroupMembersAsync(selectedGroupId);
            selectedUsersToAdd.Clear();

            // Update member count in the group access list
            var groupAccessItem = groupAccess?.FirstOrDefault(g => g.GroupId == selectedGroupId.ToString());
            if (groupAccessItem != null && currentMembers != null)
            {
                groupAccessItem.MemberCount = currentMembers.Count;
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error adding users to group {GroupId}", selectedGroupId);
            ToastService.ShowError("Failed to add users to group");
        }
    }

    private async Task RemoveGroupMember(string userId)
    {
        try
        {
            await UserGroupService.RemoveUserFromGroupAsync(selectedGroupId, userId);
            ToastService.ShowSuccess("Member removed from group");

            // Reload members
            currentMembers = await UserGroupService.GetGroupMembersAsync(selectedGroupId);

            // Update member count in the group access list
            var groupAccessItem = groupAccess?.FirstOrDefault(g => g.GroupId == selectedGroupId.ToString());
            if (groupAccessItem != null && currentMembers != null)
            {
                groupAccessItem.MemberCount = currentMembers.Count;
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error removing user {UserId} from group {GroupId}", userId, selectedGroupId);
            ToastService.ShowError("Failed to remove member from group");
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "?";

        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();

        return parts[0][0].ToString().ToUpper();
    }

    // Placeholder model
    private class GroupAccessInfo
    {
        public string GroupId { get; set; } = string.Empty;
        public string GroupName { get; set; } = string.Empty;
        public int MemberCount { get; set; }
        public PermissionLevel PermissionLevel { get; set; }
        public string? CreatedByUserId { get; set; }
        public bool IsOwnedByCurrentUser { get; set; }
    }
}
